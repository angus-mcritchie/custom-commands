{
  "name": "custom-commands",
  "displayName": "Custom Commands",
  "description": "Write custom commands to run using Ctrl + Shift + P.",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/angus-mcritchie/custom-commands"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "angus-mcritchie",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "custom-commands.run",
        "title": "Custom Commands: Run..."
      }
    ],
    "configuration": {
      "title": "CustomCommands",
      "properties": {
        "customCommands.commands": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "Commands",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of command"
              },
              "command": {
                "type": "string",
                "description": "The actual command to run"
              },
              "runOnStartup": {
                "type": "boolean",
                "description": "Should we run this command on startup?"
              },
              "runOnShutdown": {
                "type": "boolean",
                "description": "Should we run this command on shutdown?"
              }
            }
          },
          "default": [
            {
              "name": "Hello World",
              "command": "echo Hello World",
              "runOnStartup": false,
              "runOnShutdown": false
            }
          ],
          "scope": "window",
          "description": "All custom commands."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "ts-loader": "^9.4.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "@vscode/test-electron": "^2.2.0"
  }
}
